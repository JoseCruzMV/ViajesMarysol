@model TourViewModel

@{
    ViewData["Title"] = "Editar Tour";
}

<section>
<h5 class="display-6">@ViewData["Title"]</h5>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit" asp-controller="Tours">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="row">
                <div class="col-md-6 col-12">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                    <label asp-for="Description" class="form-label mt-2"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="col-md-6 col-12">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>

                    <label asp-for="DurationInDays" class="form-label mt-2"></label>
                    <input asp-for="DurationInDays" class="form-control" />
                    <span asp-validation-for="DurationInDays" class="text-danger"></span>
                </div>
            </div>

            <h4 class="mt-4">Asignar Destinos</h4>
            <div>
                @if (Model.Cities is not null && Model.Cities.Count > 0)
                {
                    @for (var i = 0; i < Model.Cities.Count; i++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="Cities[i].Id" />
                            <input type="hidden" asp-for="Cities[i].Name" />
                            <input type="hidden" asp-for="Cities[i].Country" />
                            <input type="checkbox" asp-for="Cities[i].Selected" class="form-check-input" />
                            <label class="form-check-label">@Model.Cities[i].Name</label>
                        </div>    
                    }
                }
                else
                {
                    <span>No hay destinos disponibles.</span>
                }
            </div>

            <div class="mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="Tours" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

</section>