@model IEnumerable<TourViewModel>

@{
    ViewData["Title"] = "Administracion de Tours";
}

<h1 class="display-6 text-center">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" asp-controller="Tours" class="btn btn-primary">Crear Nuevo Tour</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Description)</th>
            <th>@Html.DisplayNameFor(m => m.Price)</th>
            <th>@Html.DisplayNameFor(m => m.DurationInDays)</th>
            <th>Fecha de Inicio</th>
            <th>Fecha de Fin</th>
            <th>Ciudades</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if ( Model is not null && Model!.Count() > 0)
        {
            @foreach (var tour in Model!)
            {
                <tr>
                    <td>@tour.Name</td>
                    <td>@tour.Description</td>
                    <td>@tour.Price.ToString("C2")</td>
                    <td>@tour.DurationInDays</td>
                    <td>Fecha Inicio</td>
                    <td>Fecha fin</td>
                    <td>
                        @if (tour.Cities is not null && tour.Cities.Count > 0)
                        {
                            <ul>
                                @foreach(var city in tour.Cities)
                                {
                                    <li>@city.Name</li>
                                }
                            </ul>
                        }else
                        {
                            <span>No hay ciudades asignadas</span>
                        }
                    </td>
                    <td>
                        <a asp-action="" asp-controller="Tours" asp-route-id="@tour.Id" class="btn btn-sm btn-info">Editar</a>
                        @* <a asp-action="" asp-controller="Tours" asp-route-id="@tour.Id" class="btn btn-sm btn-secondary">Detalles</a> *@
                        <a asp-action="" asp-controller="Tours" asp-route-id="@tour.Id" class="btn btn-sm btn-danger">Borrar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No hay tours disponibles.</td>
            </tr>
        }
    </tbody>
</table>
